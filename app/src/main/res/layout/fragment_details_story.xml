<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/backgroundPirmaryTransparancy"
        tools:context="borislaporte.lipstyapp.Fragment.LetsFlirtSubFragment.DetailsStoryFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">


        <TextView
            android:id="@+id/flirt_fact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontLight"
            android:textSize="30sp"
            android:layout_marginTop="48dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:text="@string/flirt_fact_3"/>

        <TextView
            android:id="@+id/story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flirt_fact"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:lineSpacingExtra="4sp"
            android:layout_margin="30dp"
            android:textColor="@color/colorFontLight"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/deco_type4"
            android:layout_toRightOf="@id/flirt_fact"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_alignBottom="@+id/flirt_fact"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-60dp"
            android:src="@drawable/deco_type3"
            android:foregroundGravity="center"
            android:layout_marginLeft="100dp"
            android:layout_alignBottom="@+id/story"/>

</RelativeLayout>
