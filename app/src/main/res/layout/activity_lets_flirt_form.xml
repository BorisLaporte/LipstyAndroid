<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context="borislaporte.lipstyapp.LetsFlirtFormActivity">

    <include
        layout="@layout/tool_bar"
        />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_toolbar">

        <TextView
            android:id="@+id/step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textColor="@color/colorFontReg"
            android:layout_marginTop="60dp"/>

        <ImageView
            app:layout_widthPercent="14%"
            app:layout_aspectRatio="100%"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/deco_type_2"
            android:layout_toLeftOf="@id/step"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/step"/>

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorFontReg"
            android:textSize="18sp"
            android:layout_below="@+id/step"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/question"
            android:layout_marginTop="10dp"
            android:id="@+id/placeholderForm">

        </FrameLayout>

    </android.support.percent.PercentRelativeLayout>


</RelativeLayout>
