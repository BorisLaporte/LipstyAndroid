<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="borislaporte.lipstyapp.LetsFlirtResultActivity">

    <include
        layout="@layout/tool_bar"
        />

    <RelativeLayout
        android:id="@+id/container_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_toolbar">


        <android.support.v4.view.ViewPager
            android:id="@+id/results_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/dot"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:radius="5dp"
            app:fillColor="@color/colorPrimaryDarker"
            app:pageColor="@color/colorPrimaryLighter"
            app:strokeWidth="0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp" />

    </RelativeLayout>


</RelativeLayout>
